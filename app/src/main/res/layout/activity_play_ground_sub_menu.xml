<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Playground.PlayGroundSubMenuActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="294dp"
        android:layout_height="46dp"
        android:text="@string/PlayGroundName"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="39dp"
        tools:text="@string/PlayGroundName"
        tools:layout_editor_absoluteX="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/toolbar"
        android:layout_alignEnd="@+id/toolbar" />

    <Button
        android:id="@+id/btnTaskToDo"
        android:layout_width="358dp"
        android:layout_height="wrap_content"

        android:text="@string/btnTaskToDo"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="134dp"
        tools:text="@string/btnTaskToDo"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnLastUpdate"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:text="@string/btnLastUpdate"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="261dp"
        tools:text="@string/btnLastUpdate"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/btnTaskToDo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>


    <Button
        android:id="@+id/btnInfoZone"
        android:layout_width="347dp"
        android:layout_height="44dp"
        android:text="@string/btnInfoZone"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="383dp"
        tools:text="@string/btnInfoZone"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/btnLastUpdate"
        android:layout_alignLeft="@+id/btnLastUpdate"
        android:layout_alignStart="@+id/btnLastUpdate"
        android:layout_alignRight="@+id/btnTaskToDo"
        android:layout_alignEnd="@+id/btnTaskToDo"></Button>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/btnTaskToDo"
        android:layout_alignEnd="@+id/btnTaskToDo"
        android:layout_alignParentTop="true" />


</RelativeLayout>
